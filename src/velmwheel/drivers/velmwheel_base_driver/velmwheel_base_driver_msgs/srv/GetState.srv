---

# Inactive state ID
uint8 INACTIVE = 0
# Active state ID
uint8 ACTIVE = 1
# Fault state ID
uint8 FAULT = 2
# Recovering from fault ID
uint8 RECOVERING = 3

# State of the driver
uint8 state

# True if service has been sucesfully served
bool success
# Human readable error message if success is @c false, else empty string.
string error_message
