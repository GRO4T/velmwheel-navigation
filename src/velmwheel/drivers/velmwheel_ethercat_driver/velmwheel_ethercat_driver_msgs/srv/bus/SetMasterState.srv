# Possible master states
uint8 INIT   = 0
uint8 PREOP  = 1
uint8 SAFEOP = 2
uint8 OP     = 3

# Bus state to be set
uint8 state

---

# True if the bus state has been sucesfully set
bool success
# Human readable error message if success is false, else empty string.
string error_message
