<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">

    <!-- Package's name -->
    <name>velmwheel_ethercat_driver</name>
    <!-- Package's version -->
    <version>0.0.0</version>
    <!-- Package's description -->
    <description>

    Package providing low-level EtherCAT network driver for the WUT Velmwheel robot basing on the Hilscher's
    CIFX/netX hardware interface. Package provides a raw network-traffic controller with capabilities to add
    slave-device drivers as runtime-loadable plugins.

    </description>
    <!-- Package's author -->
    <author email="krzysztof.pierczyk@gmail.com">Krzysztof Pierczyk</author>
    <!-- Package's maintainer -->
    <maintainer email="krzysztof.pierczyk@gmail.com">Krzysztof Pierczyk</maintainer>
    <!-- Package's license -->
    <license>BSD</license>

    <!-- Package's build dependencies -->
    <buildtool_depend>ament_cmake</buildtool_depend>
    <buildtool_depend>ament_cmake_python</buildtool_depend>
    <buildtool_depend>cmake_common</buildtool_depend>
    <!-- Package's buildtime export dependencies -->
    <build_export_depend>rclcpp</build_export_depend>
    <build_export_depend>cifx_ethercat</build_export_depend>
    <!-- Package's buildtime dependencies -->
    <build_depend>rclcpp</build_depend>
    <build_depend>rclcpp_components</build_depend>
    <build_depend>pluginlib</build_depend>
    <build_depend>node_common_cpp</build_depend>
    <build_depend>cifx_ethercat</build_depend>
    <build_depend>velmwheel_ethercat_driver_msgs</build_depend>
    <!-- Package's runtime dependencies -->
    <exec_depend>rclcpp</exec_depend>
    <exec_depend>rclpy</exec_depend>
    <exec_depend>rcl_interfaces</exec_depend>
    <exec_depend>rclcpp_components</exec_depend>
    <exec_depend>pluginlib</exec_depend>
    <exec_depend>node_common_cpp</exec_depend>
    <exec_depend>package_common_py</exec_depend>
    <exec_depend>cifx_ethercat</exec_depend>
    <exec_depend>velmwheel_twincat</exec_depend>
    <exec_depend>velmwheel_ethercat_driver_msgs</exec_depend>
    <exec_depend>velmwheel_common</exec_depend>

    <!-- Package's exports -->
    <export>
        <build_type>ament_cmake</build_type>
    </export>

</package>